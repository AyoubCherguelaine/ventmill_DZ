<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCF4DD"
    tools:context=".sign_up_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/border"
        android:backgroundTint="#73909D"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up "
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="50sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-condensed"
            />
        <EditText
            android:id="@+id/user_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="17dp"
            android:textColor="@color/black"
            android:hint="username"
            android:textColorHint="#403D3D"
            android:paddingLeft="17dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"
            />
        <EditText
            android:id="@+id/password_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="17dp"
            android:textColor="@color/black"
            android:hint="Password"
            android:textColorHint="#403D3D"
            android:paddingLeft="17dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-condensed"
            />
        <EditText
            android:id="@+id/password_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="17dp"
            android:textColor="@color/black"
            android:hint="Password"
            android:textColorHint="#403D3D"
            android:paddingLeft="17dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            />
        <Button
            android:id="@+id/signup_btn"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="65dp"
            android:text="sign up"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#73909D"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"
            app:backgroundTint="@null"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="return to sign in page"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                />

            <Button
                android:id="@+id/sign_in_go"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="sign in"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@android:color/transparent"
                app:backgroundTint="@null"
                />



        </LinearLayout>

    </LinearLayout>

</LinearLayout>